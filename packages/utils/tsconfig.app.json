{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./examples/*"
            ],
            "@site-pro/utils": [
                "./src/index"
            ],
            "@site-pro/utils/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./vite-env.d.ts",
        "./src/**/*",
        "./src/**/*.vue",
        "./examples/**/*",
        "./examples/**/*.vue"
    ],
    "exclude": [
        "./node_modules"
    ]
}
