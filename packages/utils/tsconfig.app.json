{
    "compilerOptions": {
        // 启用复合项目模式 允许被其他配置引用
        "composite": true,
        // 目标 ECMAScript 版本
        "target": "ESNext",
        // 模块系统 使用ES模块
        "module": "ESNext",
        // 引入的库文件 包含 DOM 和 ES 最新特性
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        // 启用严格类型检查模式
        "strict": true,
        // 不生成输出文件
        "noEmit": true,
        // 模块解析策略 适配打包工具
        "moduleResolution": "Bundler",
        // 强制模块检测 避免非模块文件被误判
        "moduleDetection": "force",
        // 兼容 Node 的导入
        "esModuleInterop": true,
        // 跳过第三方库类型检查
        "skipLibCheck": true,
        // 允许导入 JSON 文件
        "resolveJsonModule": true,
        // 允许导入 .ts/.tsx 扩展名的模块
        "allowImportingTsExtensions": true,
        // 强制每个文件作为独立模块 避免全局污染
        "isolatedModules": true,
        // 禁止对模块语法进行额外转换
        "verbatimModuleSyntax": true,
        // 禁止未使用的局部变量
        "noUnusedLocals": true,
        // 禁止未使用的函数参数
        "noUnusedParameters": true,
        // 禁止 switch 语句中的穿透情况
        "noFallthroughCasesInSwitch": true,
        // 禁止隐式的 this 类型
        "noImplicitThis": true,
        // 无副作用导入检查
        "noUncheckedSideEffectImports": true,
        // 编译类型擦除
        "erasableSyntaxOnly": true,
        // 对类字段使用 Vue.DefineProperty 语义
        "useDefineForClassFields": true,
        // JSX 语法处理方式 保留原始格式
        "jsx": "preserve",
        // 在 Vue 中 JSX 导入源
        "jsxImportSource": "vue",
        // 基础路径 与根配置保持一致
        "baseUrl": ".",
        // 路径别名配置
        "paths": {
            "@/*": [
                "examples/*"
            ],
            "@site-pro/utils": [
                "src/index"
            ],
            "@site-pro/utils/*": [
                "src/*"
            ]
        },
        // 加载类型声明
        "types": [
            "scroll-into-view-if-needed",
            "vue-types"
        ]
    },
    "include": [
        "vite-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "examples/**/*.ts",
        "examples/**/*.tsx",
        "examples/**/*.vue"
    ],
    "exclude": [
        "types",
        "lib",
        "es"
    ]
}
