{
    "compilerOptions": {
        // 基础路径
        "baseUrl": ".",
        // 保留符号链接的原始路径
        "preserveSymlinks": true
    },
    // 不包含任何顶层文件 通过 references 关联子配置
    "files": [],
    "references": [
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.vite.json"
        }
    ],
    "exclude": [
        "node_modules",
        "types",
        "lib",
        "es"
    ]
}
