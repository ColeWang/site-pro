{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "vite/client",
            "node"
        ],
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "vite-env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ]
}
